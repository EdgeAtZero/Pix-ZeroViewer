<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="PrivateResource">

    <data>

        <variable
            name="account"
            type="androidx.lifecycle.LiveData&lt;com.edgeatzero.projects.pixiv.database.AccountEntity>" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_header_height"
        android:background="?android:attr/colorPrimary">

        <com.edgeatzero.library.view.ShapeImageView
            android:id="@+id/ShapeImageView"
            url="@{account.user.profileImageUrls.px170x170}"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginBottom="8dp"
            app:circle="true"
            app:layout_constraintBottom_toTopOf="@+id/TextView"
            app:layout_constraintStart_toStartOf="@+id/TextView"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            android:lines="1"
            android:text="@{account.user.name}"
            android:textColor="@color/abc_primary_text_material_dark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="@tools:sample/full_names" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>